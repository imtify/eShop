{
  "name": "eshop",
  "version": "1.0.0",
  "description": "eCommerce Application build with MERN",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "yarn --cwd frontend start",
    "dev": "yarn concurrently \"yarn run server\" \"yarn run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "yarn install && yarn --cwd frontend install && yarn --cwd frontend build"
  },
  "repository": "https://github.com/imtify/eshop.git",
  "author": "Imtiaz Limon",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2"
  }
}
